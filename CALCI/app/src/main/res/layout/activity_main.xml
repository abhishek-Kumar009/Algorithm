<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btndot"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:text="."
        android:textSize="30sp" />

    <Button
        android:id="@+id/btndel"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btndot"
        android:text="DEL"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnclear"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btndel"
        android:text="C"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnclear"
        android:text="="
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnd0"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_above="@+id/btndot"
        android:layout_alignStart="@+id/btndot"
        android:text="00"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_above="@+id/btndot"
        android:layout_toEndOf="@+id/btndot"
        android:text="0"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnchk"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_above="@+id/btndot"
        android:layout_toEndOf="@+id/btndel"
        android:text="CHECK"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnadd"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_above="@+id/btndot"
        android:layout_toEndOf="@+id/btnclear"
        android:text="+"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_above="@+id/btnd0"
        android:layout_alignStart="@+id/btndot"
        android:text="7"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_above="@+id/btnd0"
        android:layout_toEndOf="@+id/btndot"
        android:text="8"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_above="@+id/btnd0"
        android:layout_toEndOf="@+id/btndel"
        android:text="9"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnmulti"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_above="@+id/btnd0"
        android:layout_toEndOf="@+id/btnclear"
        android:text="*"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_above="@+id/btn7"
        android:layout_alignStart="@+id/btndot"
        android:text="4"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_above="@+id/btn7"
        android:layout_toEndOf="@+id/btndot"
        android:text="5"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_above="@+id/btn7"
        android:layout_toEndOf="@+id/btndel"
        android:text="6"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnsub"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_above="@+id/btn7"
        android:layout_toEndOf="@+id/btnclear"
        android:text="-"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_above="@+id/btn4"
        android:layout_alignStart="@+id/btndot"
        android:text="1"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_above="@+id/btn4"
        android:layout_toEndOf="@+id/btndot"
        android:text="2"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_above="@+id/btn4"
        android:layout_toEndOf="@+id/btndel"
        android:text="3"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btndiv"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_above="@+id/btn4"
        android:layout_toEndOf="@+id/btnclear"
        android:text="/"
        android:textSize="30sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/btn1"
        android:layout_alignParentStart="true"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/txtScreen"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="53dp"
        android:textSize="30sp" />

</RelativeLayout>